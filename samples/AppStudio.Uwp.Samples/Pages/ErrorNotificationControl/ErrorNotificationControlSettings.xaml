<UserControl
    x:Class="AppStudio.Uwp.Samples.ErrorNotificationControlSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300">

    <Grid
        BorderBrush="LightGray"
        BorderThickness="1,0,0,0">
        <Grid.Background>
            <SolidColorBrush
                Color="White"
                Opacity="0.85"/>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="24">
                <controls:PropertySet
                    Source="{Binding}"
                    Property="ForceCrash"
                    Value="{Binding ForceCrash, Mode=TwoWay}"/>
                <controls:PropertySet
                    Source="{Binding}"
                    Property="ErrorText"
                    Value="{Binding ErrorText, Mode=TwoWay}"/>
                <controls:PropertySet
                    Source="{Binding}"
                    Property="ErrorColor"
                    Value="{Binding ErrorColor, Mode=TwoWay}"/>
                <Button
                    Content="Refresh"
                    Command="{Binding RefreshData}"
                    Style="{StaticResource SettingsButtonStyle}"
                    Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>